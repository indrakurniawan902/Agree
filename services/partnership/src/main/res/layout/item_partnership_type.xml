<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:textAppearance="?attr/captionLargeSemiBold"
            android:textColor="?attr/black_font"
            tools:text="DKI Jakarta" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:textAppearance="?attr/captionLargeRegular"
            android:textColor="?attr/black_700"
            tools:text="Peternak akan mendapatkan hasil usaha dari perhitungan harga kontrak yang telah ditentukan per ekor ayam" />

        <include layout="@layout/layout_separator" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>