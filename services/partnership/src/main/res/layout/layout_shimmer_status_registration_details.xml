<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/cvCompanyName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			android:layout_marginVertical="@dimen/dimen_12dp"
			app:cardBackgroundColor="@color/colorWhite"
			app:cardCornerRadius="0dp"
			app:cardElevation="0dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<View
					android:id="@+id/shimmerImgProfile"
					android:layout_width="@dimen/dimen_48dp"
					android:layout_height="@dimen/dimen_48dp"
					android:background="@drawable/bg_shimmer_oval"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

				<View
					android:id="@+id/shimmerPartnerName"
					android:layout_width="0dp"
					android:layout_height="@dimen/dimen_14dp"
					android:layout_marginHorizontal="@dimen/dimen_12dp"
					android:background="@drawable/bg_shimmer"
					app:layout_constraintStart_toEndOf="@+id/shimmerImgProfile"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintWidth_percent="0.6" />

				<View
					android:id="@+id/shimmerRequestDate"
					android:layout_width="0dp"
					android:layout_height="@dimen/dimen_10dp"
					android:layout_marginHorizontal="@dimen/dimen_12dp"
					android:layout_marginTop="@dimen/dimen_6dp"
					android:background="@drawable/bg_shimmer"
					app:layout_constraintStart_toEndOf="@+id/shimmerImgProfile"
					app:layout_constraintTop_toBottomOf="@id/shimmerPartnerName"
					app:layout_constraintWidth_percent="0.4" />

				<View
					android:id="@+id/shimmerRegistrationStatus"
					android:layout_width="0dp"
					android:layout_height="@dimen/dimen_21dp"
					android:layout_marginHorizontal="@dimen/dimen_12dp"
					android:layout_marginTop="@dimen/dimen_6dp"
					android:background="@drawable/bg_shimmer"
					app:layout_constraintStart_toEndOf="@+id/shimmerImgProfile"
					app:layout_constraintTop_toBottomOf="@id/shimmerRequestDate"
					app:layout_constraintWidth_percent="0.2" />

			</androidx.constraintlayout.widget.ConstraintLayout>

		</com.google.android.material.card.MaterialCardView>

		<include layout="@layout/layout_separator" />

		<View
			android:layout_width="@dimen/dimen_128dp"
			android:layout_height="@dimen/dimen_14dp"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			android:layout_marginTop="@dimen/dimen_16dp"
			android:background="@drawable/bg_shimmer" />

		<View
			android:layout_width="@dimen/dimen_150dp"
			android:layout_height="@dimen/dimen_12dp"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			android:layout_marginTop="@dimen/dimen_16dp"
			android:background="@drawable/bg_shimmer" />

		<com.google.android.material.card.MaterialCardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dimen_8dp"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			app:cardCornerRadius="@dimen/dimen_4dp"
			app:cardElevation="0dp"
			app:strokeColor="?attr/black_600"
			app:strokeWidth="@dimen/dimen_1dp">

			<View
				android:layout_width="@dimen/dimen_160dp"
				android:layout_height="@dimen/dimen_12dp"
				android:layout_margin="@dimen/dimen_10dp"
				android:background="@drawable/bg_shimmer" />

		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.card.MaterialCardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dimen_8dp"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			app:cardCornerRadius="@dimen/dimen_4dp"
			app:cardElevation="0dp"
			app:strokeColor="?attr/black_600"
			app:strokeWidth="@dimen/dimen_1dp">

			<View
				android:layout_width="@dimen/dimen_160dp"
				android:layout_height="@dimen/dimen_12dp"
				android:layout_margin="@dimen/dimen_10dp"
				android:background="@drawable/bg_shimmer" />

		</com.google.android.material.card.MaterialCardView>

		<View
			android:layout_width="@dimen/dimen_112dp"
			android:layout_height="@dimen/dimen_12dp"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			android:layout_marginTop="@dimen/dimen_16dp"
			android:background="@drawable/bg_shimmer" />

		<View
			android:layout_width="@dimen/dimen_50dp"
			android:layout_height="@dimen/dimen_12dp"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			android:layout_marginTop="@dimen/dimen_6dp"
			android:background="@drawable/bg_shimmer" />

		<View
			android:layout_width="@dimen/dimen_176dp"
			android:layout_height="@dimen/dimen_12dp"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			android:layout_marginTop="@dimen/dimen_12dp"
			android:background="@drawable/bg_shimmer" />

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_12dp"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			android:layout_marginTop="@dimen/dimen_6dp"
			android:background="@drawable/bg_shimmer" />

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_12dp"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			android:layout_marginTop="@dimen/dimen_2dp"
			android:background="@drawable/bg_shimmer" />

		<View
			android:layout_width="@dimen/dimen_200dp"
			android:layout_height="@dimen/dimen_12dp"
			android:layout_marginHorizontal="@dimen/dimen_16dp"
			android:layout_marginTop="@dimen/dimen_2dp"
			android:background="@drawable/bg_shimmer" />

	</LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>