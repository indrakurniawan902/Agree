<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.menu.detailsubvessel.incident.IncidentFragment">

    <com.telkom.legion.component.viewstate.LgnViewState
        android:id="@+id/msvIncident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_200"
        app:emptyView="@layout/layout_empty_list_incident"
        app:errorView="@layout/layout_empty_cultivation_activity"
        app:loadingView="@layout/layout_shimmer_list_incident"
        app:viewState="content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvIncident"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="4"
            tools:listitem="@layout/item_incident" />
    </com.telkom.legion.component.viewstate.LgnViewState>



</androidx.core.widget.NestedScrollView>
