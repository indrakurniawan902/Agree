<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agree.ecosystem.monitoring.presentation.base.activity.detailsubvassel.DetailSubVesselActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcvOfflineBanner"
        android:name="com.agree.ecosystem.monitoring.presentation.banner.offline.OfflineBannerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_detail_subvessel"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fcvOfflineBanner"
        app:navGraph="@navigation/nav_detail_subvessel" />

</androidx.constraintlayout.widget.ConstraintLayout>