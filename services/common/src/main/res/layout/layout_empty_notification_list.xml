<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/dimen_48dp"
        android:layout_height="@dimen/dimen_48dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="only icon"
        android:src="@drawable/ic_sad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/tvTitleEmptyListNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:text="@string/label_empty_list_notification"
        android:textAlignment="center"
        android:textAppearance="?attr/bodySmallBold"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tvDescEmptyPartnership"
        style="@style/CaptionLargeRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/label_description_empty_list_notification"
        android:textAlignment="center"
        android:textAppearance="@style/CaptionLargeRegular"
        android:textColor="@color/black_font"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleEmptyListNotification" />

</androidx.constraintlayout.widget.ConstraintLayout>