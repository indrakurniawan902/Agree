        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.telkom.legion.component.dividers.LgnDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/constraint" />

        <TextView
            android:id="@+id/tvLabelDateOfSubmission"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/label_date_of_submission_loan_active"
            android:textAppearance="?attr/captionLargeRegular"
            android:textColor="@color/tertiary_500"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraint" />

        <TextView
            android:id="@+id/tvDateOfSubmission"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/captionLargeSemiBold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tvLabelDateOfSubmission"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelDateOfSubmission"
            tools:text="Selasa, 17 Agustus 1945" />

        <TextView
            android:id="@+id/tvLabelCultivatorOfSubmission"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="@string/lbl_borrower_loan_active"
            android:textAppearance="?attr/captionLargeRegular"
            android:textColor="@color/tertiary_500"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDateOfSubmission" />

        <TextView
            android:id="@+id/tvCultivatorOfSubmission"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/captionLargeSemiBold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tvLabelDateOfSubmission"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelCultivatorOfSubmission"
            tools:text="Tiana, Udin, Dono" />

        <TextView
            android:id="@+id/tvMoreCultivatorOfSubmission"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:text="@string/label_see_more_cultivator"
            android:textAppearance="?attr/captionSmallSemiBold"
            android:textColor="?attr/info_700"
            app:layout_constraintBottom_toBottomOf="@+id/tvCultivatorOfSubmission"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCultivatorOfSubmission"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelCultivatorOfSubmission" />

        <TextView
            android:id="@+id/tvAnotherCultivator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:textAppearance="@style/CaptionSmallSemiBold"
            android:textColor="@color/information_600"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tvCultivatorOfSubmission"
            app:layout_constraintStart_toEndOf="@+id/tvCultivatorOfSubmission"
            app:layout_constraintTop_toTopOf="@+id/tvCultivatorOfSubmission"
            tools:text="Lihat 5 Lainnya" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
