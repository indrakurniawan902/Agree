<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_160dp"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginEnd="@dimen/dimen_16dp"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:contentPadding="@dimen/dimen_10dp"
    app:strokeColor="?attr/black_200"
    app:strokeWidth="@dimen/dimen_1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_4dp">

        <com.telkom.legion.component.image.LgnImageView
            android:id="@+id/ivCompany"
            android:layout_width="@dimen/dimen_36dp"
            android:layout_height="@dimen/dimen_36dp"
            android:src="@drawable/img_mitra_peternak"
            android:radius="@dimen/dimen_8dp"
            app:cache="AUTOMATIC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_46dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_gravity="center_vertical"
        tools:text="Nama Mitra Perusahaan Agree"
        android:textAppearance="?attr/captionLargeRegular"/>
</com.google.android.material.card.MaterialCardView>