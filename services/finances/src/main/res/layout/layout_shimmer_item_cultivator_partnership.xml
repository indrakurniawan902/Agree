<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginVertical="@dimen/dimen_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/ivCultivatorPhoto"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_60dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vCultivatorName"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginHorizontal="@dimen/dimen_12dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintStart_toEndOf="@+id/ivCultivatorPhoto"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vNik"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintStart_toStartOf="@+id/vCultivatorName"
            app:layout_constraintTop_toBottomOf="@id/vCultivatorName" />

        <View
            android:id="@+id/vLocation"
            android:layout_width="@dimen/dimen_160dp"
            android:layout_height="@dimen/dimen_20dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintStart_toStartOf="@+id/vNik"
            app:layout_constraintTop_toBottomOf="@id/vNik" />

        <View
            android:id="@+id/vNext"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>